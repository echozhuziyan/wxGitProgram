.container{
   padding:0px;
}
.imgContainer{
    margin-top: 10px;
}
.imgContainer image{
    padding:5px;
    height: 150px;
    width: 160px;
    background-color: #eeeeee;
    position: relative;
    left:5%;
    margin-right:5%;
}
.uploadButton{
    position:fixed;
    bottom:0px;
    left:0;
    right:0;
    z-index: 999;
}
.uploadButton button{
    width:100%;
    margin:0;
    height: 36px;
    line-height: 36px;
    border-radius: 0;
}
.swiper-container {
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background: #000;
}
.swiper-container image {
    width: 100%;
    height: 100%;
}
